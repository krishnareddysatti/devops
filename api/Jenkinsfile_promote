#!/usr/bin/env groovy
@Library('JenkinsSharedLibrary') _

node {
	def projectProperties = [
		[$class: 'BuildDiscarderProperty',strategy: [$class: 'LogRotator', numToKeepStr: '10']],
		disableConcurrentBuilds(),
		parameters([
			string(name: 'PROD_BOX_IP', description: '', defaultValue: "10.0.31.242"),
			string(name: 'IMAGE_NAME', description: '', defaultValue: "qualcomm-ms-demandplanner"),
			string(name: 'IMAGE_TAG', description: 'TAG of latest image', defaultValue: "1.0.0-SNAPSHOT")
		])
	]

	properties(projectProperties)

	Utils utils = new Utils()

	try {
		// =========== USER DEFINED VARS ===========
		def workspacePath = pwd()
		echo "workspacePath: ${workspacePath}"
		def distroRepoUrl = 'ssh://git@innersource.accenture.com/appq/distro_api.git'
		def distroDirPath = "/tmp/jenkins/distro_api"
		def artifactName = "${IMAGE_NAME}"
		def destinationIP = "${DESTINATION_IP}"
		def releasedVersion = "${IMAGE_TAG}"
		// =========== USER DEFINED VARS ===========

		stage('Git Checkout') {
			utils.distroCheckout(distroDirPath, distroRepoUrl)
		}
		
		stage('Docker Clean'){ utils.removeDanglingImages(artifactName, destinationIP) }

		stage('deploy'){
			utils.promoteAPIToEnv(artifactName, releasedVersion, PROP_ENV, destinationIP)
		}
	}catch (error) {
		println error
		// If there was an exception thrown, the build failed
		currentBuild.result = 'FAILURE'
		throw error
	} finally {
		// Success or failure, always send notifications
		utils.sendNotification(currentBuild.result)
	}
	
}


